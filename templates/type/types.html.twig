{% extends 'base.html.twig' %}

{% block title %}Hello AlimentController!{% endblock %}

{% block monTitre %}
    Liste de tous les types
{% endblock %}
{% block body %}
    <div class="row">
        {% for type in lesTypes %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-lg-2 col-md-4 col-6">
                        <img class="perso_imgAliment img-fluid" src="{{ asset('images/types/' ~ type.image) }}">
                    </div>
                    <div class="col">
                        {{ type.libelle }}
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
{% endblock %}
